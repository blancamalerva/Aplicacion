<?xml version='1.0' encoding='utf-8'?>
<widget id="io.platform.prueba" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AppPrueba</name>
    <description>
        App de prueba
    </description>
    <author email="blanca.malerva@gmail.com" href="https://www.occus.mx/">
        BlancaMalerva
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="splash.png" />
    <splash src="splash.png"/>

    <splash src="res/screen/ios/320x480.png" platform="ios" width="320"  height="480"  />
    <splash src="res/screen/ios/640x960.png" platform="ios" width="640"  height="960"  />
    <splash src="res/screen/ios/640x1136.png" platform="ios" width="640"  height="1136" />
    <splash src="res/screen/ios/768x1004.png" platform="ios" width="768"  height="1004" />
    <splash src="res/screen/ios/1536x2008.png" platform="ios" width="1536" height="2008" />

    <splash src="res/screen/android/screen-hdpi-landscape.png" platform="android" qualifier="land-hdpi" />
    <splash src="res/screen/android/screen-hdpi-portrait.png" platform="android" qualifier="port-hdpi" />
    <splash src="res/screen/android/screen-ldpi-landscape.png" platform="android" qualifier="land-ldpi" />
    <splash src="res/screen/android/screen-ldpi-portrait.png" platform="android" qualifier="port-ldpi" />
    <splash src="res/screen/android/screen-mdpi-landscape.png" platform="android" qualifier="land-mdpi" />
    <splash src="res/screen/android/screen-mdpi-portrait.png" platform="android" qualifier="port-mdpi" />
    <splash src="res/screen/android/screen-xhdpi-landscape.png" platform="android" qualifier="land-xhdpi" />
    <splash src="res/screen/android/screen-xhdpi-portrait.png" platform="android" qualifier="port-xhdpi" />
  
    <plugin name="cordova-plugin-whitelist" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^4.0.0" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
    <plugin name="cordova-plugin-actionsheet" spec="^2.3.3" />
    <plugin name="cordova-plugin-spinner-dialog" spec="^1.3.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.4" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
